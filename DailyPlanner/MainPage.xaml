<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyPlanner.MainPage"
             Title="Ежедневник">

    <Shell.TitleView>
        <Grid Padding="10,20,25,0" ColumnDefinitions="*,Auto">
            <Label 
                Text="Ежедневник" 
                FontFamily="{DynamicResource AppFontFamily}"
               FontSize="{DynamicResource AppFontSize}"
               TextColor="{DynamicResource AppTextColor}"
                FontAttributes="Bold" 
                VerticalOptions="Center" 
                HorizontalOptions="Start" Grid.Column="0"/>
            <ImageButton 
                Source="settings.png" 
                WidthRequest="30" 
                HeightRequest="30" 
                BackgroundColor="Transparent" 
                VerticalOptions="Center" 
                HorizontalOptions="End" 
                Grid.Column="1"
                Clicked="OnSettingsClicked"/>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="25">
        <SearchBar x:Name="SearchBarNotes"
                   Placeholder="Поиск..."
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="LightGray"/>
        <Button 
             Text="Добавить заметку" 
             FontFamily="Nekst"
             TextColor="White"
             BackgroundColor="#512BD4"
             Clicked="OnAddNoteClicked" 
             WidthRequest="120"
             HorizontalOptions="Start"
             Margin="0,20,0,0"/>
        <CollectionView x:Name="NotesCollection"
                SelectionMode="Single"
                Margin="0,20,0,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="20"
                           BorderColor="Gray"
                           BackgroundColor="Transparent"
                           CornerRadius="8">
                        <VerticalStackLayout>
                            <Label 
                            Text="{Binding Title}"
                            FontSize="18" 
                            FontFamily="Nekst"
                            FontAttributes="Bold"/>
                            <Label 
                            Text="{Binding Text}" 
                            LineBreakMode="TailTruncation"
                            FontFamily="Nekst"/>
                            <Label 
                            Text="{Binding NoteDate, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                            FontSize="12" 
                            TextColor="Black"
                            FontFamily="Nekst"/>

                            <HorizontalStackLayout Padding="0,10,0,10" Spacing="20">
                                <Button Text="Редактировать"
                                    FontFamily="Nekst"
                                    TextColor="White"
                                    BackgroundColor="#512BD4"
                                    Clicked="OnEditNoteClicked"         
                                    HorizontalOptions="Start"
                                    CommandParameter="{Binding .}" />
                                <Button Text="Удалить"
                                    FontFamily="Nekst"
                                    TextColor="White"
                                    BackgroundColor="#512BD4"
                                    Clicked="OnDeleteNoteClicked"
                                    HorizontalOptions="Start"
                                    CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



    </VerticalStackLayout>
</ContentPage>
