<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DailyPlanner"
             x:Class="DailyPlanner.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 🔧 Динамические ресурсы для пользовательских настроек -->
            <Color x:Key="AppBackgroundColor">White</Color>
            <Color x:Key="AppTextColor">Black</Color>

            <x:Double x:Key="AppFontSize">18</x:Double>
            <x:String x:Key="AppFontFamily">OpenSansRegular</x:String>
        </ResourceDictionary>


    </Application.Resources>
    
</Application>
